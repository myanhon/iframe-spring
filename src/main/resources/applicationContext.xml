<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">


    <!-- Define your dependency here -->
    <bean id="myFortuneService" class="com.example.springdemo.HappyFortuneService"></bean>
    <!-- Define your beans here -->
    <bean id="myCoach" class="com.example.springdemo.BaseballCoach">
        <!-- Set up constructor injection your beans here -->
        <constructor-arg ref="myFortuneService"></constructor-arg>
    </bean>

    <bean id="myCricketCoach" class="com.example.springdemo.CricketCoach">
        <!-- Set up setter injection your beans here -->
        <property name="fortuneService" ref="myFortuneService"></property>
        <!-- Inject literal values-->
        <property name="emailAddress" value="thebestcoach@dot.com"></property>
        <property name="team" value="Sunrisers Hyderabad"></property>

    </bean>
</beans>
